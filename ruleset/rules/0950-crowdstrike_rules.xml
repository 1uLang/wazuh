<group name="CrowdStrike,">

  <rule id="93000" level="0">
    <decoded_as>json</decoded_as>
    <field name="metadata.customerIDString" type="pcre2">.+</field>
    <description>CrowdStrike rules</description>
  </rule>

  <rule id="93001" level="0">
    <if_sid>93000</if_sid>
    <field name="SeverityName" type="pcre2">.+</field>
    <description>CrowdStrike: Detection event)</description>
  </rule>

  <rule id="93002" level="3">
    <if_sid>93001</if_sid>
    <field name="SeverityName" type="pcre2">Low</field>
    <description>CrowdStrike: Detection low severity event)</description>
    <group>gpg13_4.12</group>
  </rule>

  <rule id="93003" level="5">
    <if_sid>93001</if_sid>
    <field name="SeverityName" type="pcre2">Medium</field>
    <description>CrowdStrike: Detection medium severity event)</description>
    <group>gpg13_4.3,gpg13_4.12</group>
  </rule>

  <rule id="93004" level="7">
    <if_sid>93001</if_sid>
    <field name="SeverityName" type="pcre2">High</field>
    <description>CrowdStrike: Detection high severity event)</description>
    <group>pci_dss_10.6.1,gpg13_4.1,gpg13_4.3,gpg13_4.12</group>
  </rule>

  <rule id="93005" level="0">
    <if_sid>93000</if_sid>
    <field name="event.ServiceName" type="pcre2">CrowdStrike Authentication</field>
    <description>CrowdStrike: Authentication event)</description>
  </rule>

  <rule id="93006" level="3">
    <if_sid>93005</if_sid>
    <field name="event.Success" type="pcre2">true</field>
    <description>CrowdStrike: successful authentication from $(event.UserIp) as $(event.UserId))</description>
    <group>hipaa_164.312.d,pci_dss_8.2</group>
  </rule>

  <rule id="93006" level="5">
    <if_sid>93005</if_sid>
    <field name="event.Success" type="pcre2">false</field>
    <description>CrowdStrike: failed authentication attempt from $(event.UserIp) as $(event.UserId))</description>
    <group>hipaa_164.312.e.1,gpg13_3.3,nist_800_53_AC.7,pci_dss_8.2</group>
  </rule>

  <rule id="93007" level="8" frequency="5" timeframe="120">
    <if_sid>93006</if_sid>
    <description>CrowdStrike: Multiple authentication failures from $(event.UserIp)</description>
    <group>hipaa_164.312.e.1,gpg13_3.3,nist_800_53_AC.7,pci_dss_8.2</group>
    <mitre>
      <id>T1110.001</id>
    </mitre>
  </rule>

</group>
