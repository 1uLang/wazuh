[Unit]
Description=Hids manager
Wants=network-online.target
After=network.target network-online.target

[Service]
Type=forking
LimitNOFILE=65536

ExecStart=/usr/bin/env WAZUH_HOME_TMP/bin/hids-control start
ExecStop=/usr/bin/env WAZUH_HOME_TMP/bin/hids-control stop
ExecReload=/usr/bin/env WAZUH_HOME_TMP/bin/hids-control reload
KillMode=none
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
