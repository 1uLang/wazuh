<!-- netcat -->
<group name="ossec,">

    <rule id="100050" level="7" ignore="10">
        <if_sid>221</if_sid>
        <decoded_as>syscollector</decoded_as>
        <field name="process.name">^nc$</field>
        <description>Netcat is running!</description>
    </rule>

    <rule id="100051" level="7" ignore="10">
        <if_sid>100050</if_sid>
        <decoded_as>syscollector</decoded_as>
        <field name="process.args">-l</field>
        <description>Netcat is running and listening for incoming connections!</description>
    </rule>

</group>